# PostgreSQL connection
DATABASE_URL=

# Redis connection (for BullMQ)
REDIS_URL=

# Convex
CONVEX_URL=

# Shared secrets for API auth
MONITORING_API_SECRET=your-api-secret-here
MONITORING_SHARED_SECRET=your-shared-secret-for-convex

# Sentry (optional)
SENTRY_DSN=

# Component toggles (all default to true)
RUN_API=true
RUN_SCHEDULER=true
RUN_WORKER=true

# Performance tuning
WORKER_CONCURRENCY=10
SCHEDULER_INTERVAL_MS=10000
SCHEDULER_BATCH_SIZE=500
CHECK_TIMEOUT_MS=10000
DEGRADED_THRESHOLD_MS=3000
LOG_LEVEL=info

# Server port
PORT=3001
